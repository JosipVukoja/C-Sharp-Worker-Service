<?xml version="1.0" encoding="utf-8" ?>
<configuration>
<log4net>
  <root>
    <level value="ALL" />
    <appender-ref ref="console" />
    <appender-ref ref="file" />
    <appender-ref ref="file1" />
  </root>

  <!--File Appender-->
  <appender name="file" type="log4net.Appender.RollingFileAppender">
    <file type="log4net.Util.PatternString">
      <conversionPattern value="C:\LogFolder\log (%date{yyyy.MM.dd}).log" />
    </file>
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="5" />
    <maximumFileSize value="25MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
    </layout>
  </appender>

  <appender name="file1" type="log4net.Appender.RollingFileAppender">
    <file value="C:\LogFolder\main.log"> </file>
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="5" />
    <maximumFileSize value="25MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
    </layout>
  </appender>

  <!--Console appender-->
  <appender name="console" type="log4net.Appender.ManagedColoredConsoleAppender">
    <mapping>
      <level value="INFO" />
      <forecolor value="Green" />
      <backcolor value="White"/>
    </mapping>
    <mapping>
      <level value="WARN" />
      <forecolor value="Yellow" />
      <backcolor value="Blue"/>
    </mapping>
    <mapping>
      <level value="ERROR" />
      <forecolor value="Red" />
    </mapping>
    <mapping>
      <level value="DEBUG" />
      <forecolor value="Blue" />
    </mapping>
    <mapping>
      <level value="FATAL" />
      <forecolor value="White" />
      <backcolor value="Red"/>
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="Log level %-5level %message%newline" />
    </layout>
  </appender>
</log4net>
  </configuration>